<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension SYSTEM "ext-1.0.dtd">

<extension engine="1.0">
	<id>mapbbcode_proprietary</id>
	<title>MapBBCode Proprietary Layers</title>
	<version>1.0.0</version>
	<description>Proprietary layers (Google, Yandex etc.) for MapBBCode Extension</description>
	<author>Ilya Zverev</author>

	<minversion>1.3</minversion>
	<maxtestedon>1.4.2</maxtestedon>

	<hooks>
		<hook id="pun_mapbbcode_js_proprietary"><![CDATA[
			$propr = '';
			$propr .= '<script src="'.$mapbb_libpath.'/proprietary/Esri.js"></script>';
			$propr .= '<script src="http://maps.google.com/maps/api/js?v=3&sensor=false"></script><script src="'.$mapbb_libpath.'/proprietary/Google.js"></script>';
			$propr .= '<script src="http://api-maps.yandex.ru/2.0/?load=package.map&lang=ru-RU"></script><script src="'.$mapbb_libpath.'/proprietary/Yandex.js"></script>';
			return $propr;
		]]></hook>
	</hooks>
</extension>
